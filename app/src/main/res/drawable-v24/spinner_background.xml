<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/white">
                </solid>

                <corners android:radius="5dp" />

                <padding

                    android:left="10dp"
                    android:right="10dp"
                    />
                <stroke
                    android:width="2dp"
                    android:color="#AFA4A4"/>
            </shape>
        </item>
        <item android:width="10dp" android:gravity="right" android:start="30dp">
            <bitmap android:src="@android:drawable/arrow_down_float" android:gravity="center"/>
        </item>
    </layer-list></item>
</selector>